
MDScreen:
    name:'forgotpassword'
    id: forgotpassword
    BoxLayout:

        size_hint: None, None
        size: 300, 400
        pos_hint: {"center_x": .5, "center_y": .5}
        elevation: 10
        padding: 10
        spacing: 20
        orientation: 'vertical'

        MDLabel:
            text: "Forgot Password?"
            font_size: 20
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]

            theme_text_color: "Custom"
            text_color: [0, 0, 0, 1]
            font_size: 46
            bold: True

        MDLabel:
            text: "Please enter the email associated with your account and we'll send you your password"
            font_size: 18

            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]

            theme_text_color: "Custom"
            text_color: [0, 0, 0, 1]
            font_size: 20


        MDTextField:
            hint_text:'Email'
            id: forgotemail
            required: True
            helper_text: "Required"
            helper_text_mode: "on_error"
            icon_right: "email"
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {'center_x': .5}
            multiline: False

        MDRectangleFlatIconButton:
            icon: "login"
            theme_text_color: "Custom"
            text: "Continue"
            font_size: 12
            pos_hint: {"center_x": 0.5}
            on_press:
                app.forgot_password()


        MDRectangleFlatIconButton:
            icon: 'arrow-left-circle'
            theme_text_color: "Custom"
            text: "BACK"
            font_size: 12
            pos_hint: {"center_x": 0.5}
            on_press:
                app.root.current = 'login'
                root.manager.transition.direction = 'right'