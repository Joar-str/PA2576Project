<LoginPage>:
MDScreen:
    name:'login'
    id: login


    BoxLayout:

        size_hint: None, None
        size: 300, 400
        pos_hint: {"center_x": .5, "center_y": .5}
        elevation: 10
        padding: 10
        spacing: 20
        orientation: 'vertical'

        MDLabel:
            text: "Welcome"
            font_size: 20
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]

            theme_text_color: "Custom"
            text_color: [0, 0, 0, 1]
            font_size: 46
            bold: True

        MDLabel:
            text: "Sign in to continue!"
            font_size: 20

            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]

            theme_text_color: "Custom"
            text_color: [0, 0, 0, 1]
            font_size: 20




        MDTextField:
            hint_text:'Username'
            id: user_name
            required: True
            helper_text: "Required"
            helper_text_mode: "on_error"
            icon_right: "account"
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {'center_x': .5}
            multiline: False

        MDTextField:
            hint_text:'Password'
            id: user_password
            helper_text: "Required"
            helper_text_mode: "on_error"
            required: True
            icon_right: "eye-off"
            size_hint_x: None
            width: 200
            password: True
            pos_hint: {'center_x': .5}
            font_size: 18
            multiline: False

        MDRectangleFlatIconButton:
            icon: "login"
            theme_text_color: "Custom"
            text: "SIGN IN"
            font_size: 12
            pos_hint: {"center_x": 0.5}
            on_press:
                app.login_input()
                app.amount_ad()

        MDRectangleFlatIconButton:
            icon: 'arrow-left-circle'
            theme_text_color: "Custom"
            text: "BACK"
            font_size: 12
            pos_hint: {"center_x": 0.5}
            on_press:
                app.reset()
                app.root.current = 'first_page'
                root.manager.transition.direction = 'right'
