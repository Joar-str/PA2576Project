#:include KV/camera.kv

MDScreen:
    name: 'createSalesAD'
    id: createSalesAD
    BoxLayout:
        orientation: 'vertical'


        BoxLayout:

            MDLabel:
                text: 'Create AD'
                halign: 'center'
                font_size: 20
                bold: True
            MDIconButton:
                icon: 'close'
                pos_hint: {"center_x": .9, "center_y": 0.85}
                on_press:
                    app.root.current = 'home_page'
                    root.manager.transition.direction = 'right'
        BoxLayout:
            orientation: 'vertical'
            MDTextField:
                hint_text:'Headline'
                id: headline
                mode: 'rectangle'
                size_hint: None, None
                width: 200
                pos_hint: {'center_x': .5}
                font_size: 10
                multiline: False

        BoxLayout:
            orientation: 'vertical'
            MDTextField:
                hint_text:'Description'
                id: created_description
                mode: 'rectangle'
                size_hint: None, None
                width: 200
                pos_hint: {'center_x': .5}
                font_size: 10
                multiline: True
        BoxLayout:
            orientation: 'vertical'
            MDTextField:
                hint_text:'Author'
                id: created_author
                icon_right: "cell-phone"
                mode: 'rectangle'
                size_hint: None, None
                width: 200
                pos_hint: {'center_x': .5}
                font_size: 10
                multiline: False
        BoxLayout:
            orientation: 'vertical'
            MDTextField:
                hint_text:'Category'
                id: created_category
                icon_right: "cell-phone"
                mode: 'rectangle'
                size_hint: None, None
                width: 200
                pos_hint: {'center_x': .5}
                font_size: 10
                multiline: False
        BoxLayout:
            orientation: 'vertical'
            MDTextField:
                hint_text:'Price'
                id: created_price
                mode: 'rectangle'
                icon_right: "cell-phone"
                size_hint: None, None
                width: 200
                pos_hint: {'center_x': .5}
                font_size: 10
                multiline: False

        FloatLayout:
            size_hint_y: None
            MDIconButton:
                icon: 'folder-search'
                user_font_size: "65sp"
                pos_hint: {'center_x': .7, 'center_y': .3}

            MDIconButton:
                icon: 'camera-plus-outline'
                user_font_size: "65sp"
                pos_hint: {"center_x": .3, 'center_y': .3}
                on_release:
                    app.root.current = 'camera_screen'


        BoxLayout:
            orientation:'horizontal'
            MDFillRoundFlatButton:
                text: "Publish"
                font_size: 12
                pos_hint: {"center_x": 0.5}
                size_hint_x: .8
                on_press:
                    app.salesAD_publish()
                    app.root.current = 'home_page'
                    root.manager.transition.direction = 'right'



