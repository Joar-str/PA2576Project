
MDScreen:
    name: 'createSalesAD'
    id: createSalesAD
    BoxLayout:
        orientation: 'vertical'
        MDToolbar:
            title: "Menu"
            elevation: 5
            left_action_items: [['menu', lambda x: root.ids.nav_drawer.set_state('toggle')]]
    BoxLayout:

        padding: 25
        spacing: 25
        orientation: 'vertical'

        MDTextField:
            hint_text:'Headline'
            id: headline
            icon_right:
            size_hint_x: None
            width: 200
            pos_hint: {'center_x': .5}
            font_size: 12
            multiline: False
        MDTextField:
            hint_text:'Description'
            id: created_description
            icon_right:
            size_hint_x: None
            width: 200
            pos_hint: {'center_x': .5}
            font_size: 12
            multiline: False

        MDTextField:
            hint_text:'Author'
            id: created_author
            icon_right: "cell-phone"
            size_hint_x: None
            width: 200
            pos_hint: {'center_x': .5}
            font_size: 12
            multiline: False

        MDTextField:
            hint_text:'Category'
            id: created_category
            icon_right: "cell-phone"
            size_hint_x: None
            width: 200
            pos_hint: {'center_x': .5}
            font_size: 12
            multiline: False

        MDTextField:
            hint_text:'Price'
            id: created_price
            icon_right: "cell-phone"
            size_hint_x: None
            width: 200
            pos_hint: {'center_x': .5}
            font_size: 12
            multiline: False

        MDRoundFlatButton:
            text: "Publish"
            font_size: 12
            pos_hint: {"center_x": 0.5}
            on_press:
                app.salesAD_publish()
                app.root.current = 'home_page'
                root.manager.transition.direction = 'right'

        MDRoundFlatButton:
            text: "Back"
            font_size: 12
            pos_hint: {"center_x": 0.2}
            on_press:
                app.root.current = 'home_page'
                root.manager.transition.direction = 'right'