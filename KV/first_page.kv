MDScreen:
    name:'first_page'
    id: first_page
    FloatLayout:

        MDLabel:
            text: 'Welcome To Student Market'
            font_style: 'H1'
            halign: 'center'
            pos_hint: {"center_y": .8}
            font_size: 35

        MDRoundFlatButton:
            text: 'login'
            size_hint: .4, .1
            pos_hint: {"center_x":.5, "center_y": .6}
            font_size: 14
            on_press:
                app.root.current = 'login'
                root.manager.transition.direction = 'left'

        MDRoundFlatButton:
            text: 'Create Account'
            size_hint: .4, .1
            pos_hint: {"center_x":.5, "center_y": .4}
            font_size: 14
            on_press:
                app.root.current = 'create_account'
                root.manager.transition.direction = 'left'