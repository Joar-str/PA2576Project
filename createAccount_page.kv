MDScreen:

    name: 'create_account'
    id: create_account
    MDCard:
        size_hint: None, None
        size: 300, 400
        pos_hint: {"center_x": .5, "center_y": .5}
        elevation: 10
        padding: 25
        spacing: 25
        orientation: 'vertical'

        MDTextField:
            hint_text:'Username'
            id: created_name
            icon_right: "account"
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {'center_x': .5}
            multiline: False

        MDTextField:
            hint_text:'Password'
            id: created_password
            icon_right: "eye-off"
            size_hint_x: None
            width: 200
            password: False
            pos_hint: {'center_x': .5}
            font_size: 18
            multiline: False

        MDTextField:
            hint_text:'PhoneNr'
            id: PhoneNr
            icon_right: "cell-phone"
            size_hint_x: None
            width: 200
            password: False
            pos_hint: {'center_x': .5}
            font_size: 18
            multiline: False

        MDRoundFlatButton:
            text: "Submit"
            font_size: 12
            pos_hint: {"center_x": 0.2}
            on_press:
                app.root.User.submit_btn()
                app.root.current = 'first_page'
                root.manager.transition.direction = 'right'

        MDRoundFlatButton:
            text: "Back"
            font_size: 12
            pos_hint: {"center_x": 0.2}
            on_press:
                app.root.current = 'first_page'
                root.manager.transition.direction = 'right'