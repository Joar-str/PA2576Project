
MDScreen:
    name:'login'
    id: login
    MDCard:
        size_hint: None, None
        size: 300, 400
        pos_hint: {"center_x": .5, "center_y": .5}
        elevation: 10
        padding: 25
        spacing: 25
        orientation: 'vertical'

        MDLabel:

            text: "WELCOME"
            font_size: 40
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]
            padding_y: 15

        MDTextField:
            hint_text:'Username'
            id: user_name
            icon_right: "account"
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {'center_x': .5}
            multiline: False

        MDTextField:
            hint_text:'Password'
            id: user_password
            icon_right: "eye-off"
            size_hint_x: None
            width: 200
            password: True
            pos_hint: {'center_x': .5}
            font_size: 18
            multiline: False

        MDRoundFlatButton:
            text: "LOG IN"
            font_size: 12
            pos_hint: {"center_x": 0.5}
            on_press:
                if app.login_input(): app.root.current = 'home_page'


        MDRoundFlatButton:
            text: "Back"
            font_size: 12
            pos_hint: {"center_x": 0.5}
            on_press:
                app.root.current = 'first_page'
                root.manager.transition.direction = 'right'

